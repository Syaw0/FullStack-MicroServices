{
  "compilerOptions": {
    "target": "esNext",
    "rootDir": "./src",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "module": "CommonJS"
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src/**/*"]
}
